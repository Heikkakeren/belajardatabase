<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="14dp"
    app:cardBackgroundColor="@color/card_bg"
    app:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <ImageView
            android:id="@+id/imgItemGambar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:background="@drawable/placeholder_laptop"
            android:layout_marginEnd="12dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvItemMerkModel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ASUS ROG"
                android:textColor="@color/text_primary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:id="@+id/tvItemProcessor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="i7 Gen 12"
                android:textColor="@color/primary"
                android:textSize="14sp"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/tvItemRamStorage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="16GB RAM | 512GB SSD"
                android:textColor="@color/text_secondary"
                android:textSize="13sp"
                android:layout_marginTop="2dp" />

            <TextView
                android:id="@+id/tvItemHarga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp 15.000.000"
                android:textColor="@color/accent"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="6dp" />

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>